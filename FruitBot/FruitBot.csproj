<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!--<DefineConstants>FRUITWARSMODE</DefineConstants>-->
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <ApplicationIcon>Assets/grapist2_square_smaller.ico</ApplicationIcon>
    <DebugType>portable</DebugType>
    <Nullable>disable</Nullable>
    <PackageIcon>grapist2_square_smaller.ico</PackageIcon>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net.Labs" Version="3.4.7" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
    <PackageReference Include="RestSharp" Version="106.13.0" />
    <PackageReference Include="Selenium.Support" Version="4.0.1" />
    <PackageReference Include="Selenium.WebDriver" Version="4.0.1" />
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="95.0.4638.5401" />
    <PackageReference Include="TaskTimer" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DataTypes\DataTypes.csproj" />
    <ProjectReference Include="..\FruitPantry\FruitPantry.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="RunescapePlayerInfoPuller">
      <HintPath>..\..\RunescapePlayerInfoPuller\bin\Release\net5.0\RunescapePlayerInfoPuller.dll</HintPath>
    </Reference>
  </ItemGroup>


  <ItemGroup>
    <None Update="Config\appsettings.debug.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Config\appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Assets\grapist2_square_smaller.ico">
      <Pack>True</Pack>
    </None>
    <None Update="Config\credentials.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
